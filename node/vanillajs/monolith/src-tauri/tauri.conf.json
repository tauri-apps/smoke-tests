{
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:4000"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "targets": [
        "deb",
        "app",
        "msi",
        "appimage"
      ]
    },
    "allowlist": {
      "all": true
    },
    "windows": [
      {
        "title": "Tauri App"
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline'"
    }
  }
}